#include<iostream>
using namespace std;
int main()
{
	int n;
	cout<<"enter the size of array:";
	cin>>n;
	int *arr;
	arr=new int [n];
	cout<<"enter the array elements";
	for(int i=0; i<n; i++)
	{
		cout<<"enter"<<i+1<<"element:";
		cin>>arr[i];
	}
	cout<<"you array is-";
	for(int i=0; i<n; i++)
	{
		cout<<arr[i]<<" ";
	}
	return 0;
}
